@{
    ViewData["Title"] = "RhymeBinder: List Binders";
}

@{
}
@model List<DisplayBinder>
@{ int index = 0; } 


    <div class="table-view-wrapper">
        <div class="list-texts-menu-bar-main">
            <div class="menu-bar-title" id="menu_bar_title">
                Your Binders:
            </div>

            <div class="menu-bar-dropdown">
                <div class="menu-bar-button-dropdown">
                    Actions ▼
                </div>
                <div class="menu-bar-dropdown-content">
                    <a class="menu-bar-dropdown-item" href="/RhymeBinder/CreateBinder">New Binder</a>
                 </div>
            </div>
        </div>
        <div class="table-view-table-container">
            <table>
                <tr>
                    <th name="selected_col" id="Selected">Current</th>
                    <th name="name_col" id="Name" ><a>Name</a></th>
                    <th name="text_count_col" id="Text Count" ><a>Text Count</a></th>
                    <th name="group_count_col" id="Group Count" ><a>Group Count</a></th>
                    <th name="last_modified_col" id="Last Modified"><a>Last Modified</a></th>
                    <th name="last_modified_by_col" id="Last Modified By" ><a>Last Modified By</a></th>
                    <th name="created_col" id="Created"><a>Created</a></th>
                    <th name="created_by_col" id="Created By" ><a>Created By</a></th>
                    <th name="description_col" id="Description"><a>Description</a></th>
                </tr>

                @foreach (var binder in Model)
                {

                <tr>

                    
                        @if (binder.Selected == true)
                        {
                            <td><a href="/RhymeBinder/EditBinder?binderID=@binder.BinderId">Manage </a>
                                ► 
                            </td>
                        }
                        else{
                            <td><a href="/RhymeBinder/EditBinder?binderID=@binder.BinderId">Manage </a>

                            </td>
                        }

                    
                        <td><a href="/RhymeBinder/OpenBinder?binderID=@binder.BinderId">@binder.Name</a></td>
                        <td name="text_count_col">@binder.PageCount</td>
                        <td name="group_count_col">@binder.GroupCount</td>
                        <td name="last_modified_col">@binder.LastModified</td>
                        <td name="last_modified_by_col">@binder.LastModifiedBy</td>
                        <td name="created_col">@binder.Created</td>
                        <td name="created_by_col">@binder.CreatedBy</td>
                        <td name="description_col">@binder.Description</td>
                    </tr>
                    { index++; }
                }

            </table>
        </div>
    </div>


